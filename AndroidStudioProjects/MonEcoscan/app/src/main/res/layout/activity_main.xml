<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/signup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="200px"
        android:layout_marginTop="500px"
        android:layout_marginEnd="200px"
        android:layout_marginBottom="200px"
        android:gravity="center"
        android:paddingTop="10px"
        android:text="Sign up"
        android:textColor="@color/black"
        android:textSize="60px"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/signup"
        android:layout_marginStart="40px"
        android:layout_marginTop="0px"
        android:layout_marginEnd="40px"
        android:layout_marginBottom="40px"
        android:autofillHints=""
        android:background="#30ffffff"
        android:drawableLeft="@drawable/ic_baseline_account_circle_24"
        android:drawablePadding="10px"
        android:hint="Username"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:padding="20px"
        android:textColor="@color/black"
        android:textColorHint="@color/black" />

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/username"
        android:layout_marginStart="40px"
        android:layout_marginTop="40px"
        android:layout_marginEnd="40px"
        android:layout_marginBottom="40px"
        android:background="#30ffffff"
        android:drawableLeft="@drawable/ic_baseline_email_24"
        android:drawablePadding="10px"
        android:hint="Email"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:padding="20px"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:autofillHints="" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="14dp"
        android:src="@drawable/eco" />

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/email"
        android:layout_marginStart="40px"
        android:layout_marginTop="40px"
        android:layout_marginEnd="40px"
        android:layout_marginBottom="40px"
        android:background="#30ffffff"
        android:drawableLeft="@drawable/ic_baseline_lock_24"
        android:drawablePadding="10px"
        android:hint="Password"
        android:inputType="textPassword"
        android:minHeight="48dp"
        android:padding="20px"
        android:textColor="@color/black"
        android:textColorHint="@color/black" />

    <EditText
        android:id="@+id/cpassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/password"
        android:layout_marginStart="40px"
        android:layout_marginTop="40px"
        android:layout_marginEnd="40px"
        android:layout_marginBottom="40px"
        android:background="#30ffffff"
        android:drawableLeft="@drawable/ic_baseline_lock_24"
        android:drawablePadding="10px"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:minHeight="48dp"
        android:padding="20px"
        android:textColor="@color/black"
        android:textColorHint="@color/black" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/registerbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cpassword"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="5px"
        android:layout_marginTop="5px"
        android:layout_marginEnd="5px"
        android:layout_marginBottom="5px"
        android:backgroundTint="@color/black"
        android:text="REGISTER" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/signinlog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/signinal"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="5px"
        android:layout_marginTop="5px"
        android:layout_marginEnd="5px"
        android:layout_marginBottom="5px"
        android:backgroundTint="@color/black"
        android:text="SIGN IN" />

    <TextView
        android:id="@+id/signinal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/registerbutton"
        android:layout_marginStart="0px"
        android:layout_marginTop="0px"
        android:layout_marginEnd="0px"
        android:layout_marginBottom="0px"
        android:gravity="center"
        android:paddingTop="10px"
        android:text="Already register ? signin"
        android:textColor="@color/black"
        android:textSize="50px"
        />
</RelativeLayout>