<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/don"
    tools:context=".MainActivity3">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:srcCompat="@tools:sample/avatars"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"

        app:shapeAppearanceOverlay="@style/circular"

        />

    <EditText
        android:id="@+id/username"
        android:layout_width="161dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:autofillHints=""
        android:background="#30ffffff"
        android:drawableLeft="@drawable/tag"
        android:drawablePadding="10px"
        android:hint="Username"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:padding="20px"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="118dp"
        tools:layout_editor_absoluteY="164dp" />

    <EditText
        android:id="@+id/first_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/username"
        android:layout_marginStart="40px"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="40px"
        android:layout_marginBottom="40px"
        android:autofillHints=""
        android:background="#30ffffff"
        android:drawableLeft="@drawable/ic_baseline_account_circle_24"
        android:drawablePadding="10px"
        android:hint="First Name"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:padding="20px"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/last_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/first_name"
        android:layout_marginStart="40px"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="40px"
        android:layout_marginBottom="40px"
        android:autofillHints=""
        android:background="#30ffffff"
        android:drawableLeft="@drawable/ic_baseline_account_circle_24"
        android:drawablePadding="10px"
        android:hint="Last Name"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:padding="20px"
        android:textColor="@color/black"
        android:textColorHint="@color/black" />

    <EditText
        android:id="@+id/age"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/last_name"
        android:layout_marginStart="40px"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="40px"
        android:layout_marginBottom="40px"
        android:autofillHints=""
        android:background="#30ffffff"
        android:drawableLeft="@drawable/cal"
        android:drawablePadding="10px"
        android:hint="Age"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:padding="20px"
        android:textColor="@color/black"
        android:textColorHint="@color/black" />

    <EditText
        android:id="@+id/adress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/age"
        android:layout_marginStart="40px"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="40px"
        android:layout_marginBottom="40px"
        android:autofillHints=""
        android:background="#30ffffff"
        android:drawableLeft="@drawable/ic_baseline_add_location_24"
        android:drawablePadding="10px"
        android:hint="Adress"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:padding="20px"
        android:textColor="@color/black"
        android:textColorHint="@color/black" />

    <EditText
        android:id="@+id/telephone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/adress"
        android:layout_marginStart="40px"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="40px"
        android:layout_marginBottom="40px"
        android:autofillHints=""
        android:background="#30ffffff"
        android:drawableLeft="@drawable/ic_baseline_phone_android_24"
        android:drawablePadding="10px"
        android:hint="Number +229"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:padding="20px"
        android:textColor="@color/black"
        android:textColorHint="@color/black" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/save_exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/telephone"
        android:layout_marginTop="20dp"
        android:text="SAVE and EXIT"
        tools:ignore="MissingConstraints"
        android:layout_centerHorizontal="true"
        tools:layout_editor_absoluteX="149dp"
        tools:layout_editor_absoluteY="648dp"
        app:backgroundTint="@color/cardview_dark_background"
        />

</RelativeLayout>