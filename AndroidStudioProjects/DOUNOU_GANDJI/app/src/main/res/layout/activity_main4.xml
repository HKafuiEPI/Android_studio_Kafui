<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ddw"
    tools:context=".MainActivity4">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_baseline_account_circle_24"
        android:layout_marginLeft="380dp"
        android:layout_marginTop="5dp">
    </ImageView>


    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="30dp"
        android:src="@drawable/attieke"
        android:id="@+id/attieke"
        app:shapeAppearanceOverlay="@style/circular">
    </com.google.android.material.imageview.ShapeableImageView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/att_txt"
        android:layout_marginLeft="60dp"
        android:layout_below="@id/attieke"
        android:text="ATTIEKE"
        android:textStyle="normal"
        android:textSize="20dp">
    </TextView>

    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="220dp"
        android:src="@drawable/test3"
        android:id="@+id/fonio"
        app:shapeAppearanceOverlay="@style/circular">
    </com.google.android.material.imageview.ShapeableImageView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fonio_txt"
        android:layout_marginLeft="240dp"
        android:layout_below="@id/fonio"
        android:text="Potato salad"
        android:textStyle="normal"
        android:textSize="20dp">
    </TextView>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/test1"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="260dp"
        android:src="@drawable/pate_mais"
        app:shapeAppearanceOverlay="@style/circular">
    </com.google.android.material.imageview.ShapeableImageView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/t1_txt"
        android:layout_marginLeft="0dp"
        android:layout_below="@id/test1"
        android:text="Pate de mais et lÃ©gumes"
        android:textStyle="normal"
        android:textSize="20dp">
    </TextView>
    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        android:layout_marginTop="260dp"
        android:layout_marginLeft="230dp"
        android:src="@drawable/test2"
        android:id="@+id/test2"
        app:shapeAppearanceOverlay="@style/circular">
    </com.google.android.material.imageview.ShapeableImageView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/t2_txt"
        android:layout_marginLeft="260dp"
        android:layout_below="@id/test2"
        android:text="Fonio salad"
        android:textStyle="normal"
        android:textSize="20dp">
    </TextView>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/tes3"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="430dp"
        android:src="@drawable/fevi"
        app:shapeAppearanceOverlay="@style/circular">

    </com.google.android.material.imageview.ShapeableImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/t3_txt"
        android:layout_marginLeft="90dp"
        android:layout_below="@id/tes3"
        android:text="Fevi"
        android:textStyle="normal"
        android:textSize="20dp">
    </TextView>
    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="430dp"
        android:layout_marginLeft="220dp"
        android:src="@drawable/ablo"
        android:id="@+id/test3"
        app:shapeAppearanceOverlay="@style/circular">
    </com.google.android.material.imageview.ShapeableImageView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ts3_txt"
        android:layout_marginLeft="220dp"
        android:layout_below="@id/test3"
        android:text="Ablo (Rice cake)"
        android:textStyle="normal"
        android:textSize="20dp">
    </TextView>

    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/test3"
        android:layout_marginTop="70dp"
        android:text="EXPLORE MORE OPTIONS"
        app:backgroundTint="@color/cardview_dark_background">
    </com.google.android.material.button.MaterialButton>

</RelativeLayout>
